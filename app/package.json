{
  "name": "sample-app",
  "version": "1.0.0",
  "private": true,
  "description": "Sample Application - Monorepo with npm workspaces",
  "workspaces": [
    "shared",
    "public",
    "admin",
    "batch"
  ],
  "scripts": {
    "install:all": "npm install",
    "lint": "eslint . --ext .js",
    "test": "npm run test --workspaces",
    "dev:public": "npm run dev --workspace=public",
    "dev:admin": "npm run dev --workspace=admin",
    "start:public": "npm run start --workspace=public",
    "start:admin": "npm run start --workspace=admin",
    "start:batch": "npm run start --workspace=batch"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
