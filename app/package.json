{
  "name": "myapp-monorepo",
  "version": "1.0.0",
  "description": "AWS Multi-Account Sample Application - Monorepo",
  "private": true,
  "workspaces": [
    "public",
    "admin",
    "batch",
    "shared"
  ],
  "scripts": {
    "install:all": "npm install && npm run bootstrap",
    "bootstrap": "npm install --workspaces",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "docker:build": "npm run docker:build:public && npm run docker:build:admin && npm run docker:build:batch",
    "docker:build:public": "docker build -f public/Dockerfile -t myapp-public-web:latest .",
    "docker:build:admin": "docker build -f admin/Dockerfile -t myapp-admin-dashboard:latest .",
    "docker:build:batch": "docker build -f batch/Dockerfile -t myapp-batch-processing:latest ."
  },
  "keywords": [
    "aws",
    "multi-account",
    "ecs",
    "fargate",
    "transit-gateway"
  ],
  "author": "Your Team",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1"
  }
}
